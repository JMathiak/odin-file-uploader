<html>
    <head>
        <title>File List
        </title>
    </head>
    <body>
        <div class="folder-container">
            <% if(folders.length > 0){ %>
                <ul>
                    <% folders.forEach((folder) => { %>
                     <li><%- folder.name %>  <form class="message-delete-container" action="/folder/delete/<%= folder.id %>?_method=DELETE" method="POST">
                        <button class="message-delete" type="submit" onclick="return confirm('Are you sure you want to delete this folder?')"><span>Delete</span></button>
                    </form></li>   
                        
                        <% }) %>
                </ul>
                
                <% }else{ %>
                    <h1><%= user.username %> has no folders</h1>
                    
                    <% } %>
        </div>
        <a href="/">Go Home</a>
    </body>
</html>